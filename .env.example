# ===========================================
# DISASTER MANAGEMENT SYSTEM V2 - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and update values for your environment
# DO NOT commit .env file to version control

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=disaster_management_v2
DB_USER=root
DB_PASSWORD=your_secure_password_here

# Database Connection Pool Settings
DB_POOL_MINIMUM_IDLE=5
DB_POOL_MAXIMUM=20
DB_CONNECTION_TIMEOUT=20000
DB_IDLE_TIMEOUT=300000
DB_MAX_LIFETIME=1200000

# ===========================================
# REDIS CONFIGURATION (CACHING & SESSIONS)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=2000
REDIS_SESSION_TIMEOUT=1800

# ===========================================
# JWT AUTHENTICATION CONFIGURATION
# ===========================================
# IMPORTANT: Change JWT_SECRET in production (minimum 256 bits)
JWT_SECRET=your_jwt_secret_key_minimum_256_bits_change_this_in_production_environment
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000
JWT_ISSUER=disaster-management-system

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev
APP_NAME=Disaster Management System V2
APP_VERSION=2.0.0

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Frontend application URLs (comma-separated for multiple)
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*
ALLOW_CREDENTIALS=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/application.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_HISTORY=30

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
# SMTP settings for notifications
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS=true

# ===========================================
# EXTERNAL SERVICES (Optional)
# ===========================================
# Google Maps API for location services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# SMS Service (Twilio, etc.)
SMS_SERVICE_SID=your_sms_service_sid
SMS_AUTH_TOKEN=your_sms_auth_token
SMS_FROM_NUMBER=+1234567890

# ===========================================
# MONITORING & METRICS
# ===========================================
MANAGEMENT_ENDPOINTS_ENABLED=true
METRICS_EXPORT_PROMETHEUS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
FILE_UPLOAD_MAX_SIZE=10MB
FILE_UPLOAD_MAX_REQUEST_SIZE=50MB
FILE_UPLOAD_PATH=./uploads

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
ENABLE_CSRF=true
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=Lax

# ===========================================
# DEVELOPMENT/TESTING SETTINGS
# ===========================================
# Set to true for development only
ENABLE_H2_CONSOLE=false
SHOW_SQL=false
DDL_AUTO=validate

# Test database settings (used in tests)
TEST_DB_URL=jdbc:h2:mem:testdb
TEST_DB_USER=sa
TEST_DB_PASSWORD=

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# SSL Configuration for production
SSL_ENABLED=false
SSL_KEY_STORE=
SSL_KEY_STORE_PASSWORD=
SSL_KEY_PASSWORD=

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ===========================================
# DOCKER CONFIGURATION
# ===========================================
# Used by docker-compose.yml
COMPOSE_PROJECT_NAME=disaster-management
MYSQL_ROOT_PASSWORD=${DB_PASSWORD}
NGINX_PORT=80
FRONTEND_PORT=4200
BACKEND_PORT=8080

# ===========================================
# EXAMPLE VALUES FOR DEVELOPMENT
# ===========================================
# Uncomment and use these for quick development setup:
# DB_PASSWORD=devpassword123
# JWT_SECRET=development-secret-key-should-be-at-least-256-bits-long-for-security
# REDIS_PASSWORD=
# SPRING_PROFILES_ACTIVE=dev
# LOG_LEVEL=DEBUG
