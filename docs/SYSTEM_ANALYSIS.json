        "authorization": ["Admin", "Department Head", "Dispatcher", "Rescue Team"],
        "pagination": true
      },
      {
        "name": "DashboardController",
        "path": "/api/dashboard",
        "endpoints": 4,
        "features": [
          "GET /stats - Comprehensive admin dashboard statistics",
          "GET /victim - Victim-specific dashboard data",
          "GET /department - Department dashboard with team utilization",
          "GET /victim/stats - Legacy victim stats (deprecated)"
        ],
        "role_specific_views": true
      },
      {
        "name": "RescueTeamController",
        "path": "/api/teams",
        "endpoints": 12,
        "features": [
          "GET / - Get all teams",
          "GET /available - Get available teams only",
          "GET /available/{capability} - Filter by emergency type capability",
          "GET /{id} - Get team by ID",
          "GET /status/{status} - Filter by status",
          "GET /department/{departmentId} - Get teams by department",
          "POST / - Create new rescue team",
          "PATCH /{id}/status - Update team status",
          "PATCH /{id}/location - Update GPS location",
          "PATCH /{id}/capabilities - Update team capabilities",
          "DELETE /{id} - Delete team",
          "GET /stats/by-status - Team statistics"
        ],
        "capabilities": ["FIRE", "MEDICAL", "CRIME", "NATURAL_DISASTER", "ACCIDENT", "RESCUE", "HAZMAT"]
      },
      {
        "name": "DepartmentController",
        "path": "/api/departments",
        "endpoints": 7,
        "features": [
          "GET / - Get all departments",
          "GET /active - Get active departments only",
          "GET /{id} - Get department by ID",
          "GET /name/{name} - Get department by name",
          "POST / - Create department",
          "PUT /{id} - Update department",
          "PATCH /{id}/deactivate - Soft delete department",
          "DELETE /{id} - Permanently delete department"
        ]
      },
      {
        "name": "MessageController",
        "path": "/api/messages",
        "endpoints": 7,
        "features": [
          "POST / - Send chat message",
          "GET / - Get messages (paginated)",
          "GET /all - Get all messages (non-paginated)",
          "PATCH /{id}/read - Mark message as read",
          "PATCH /read-all - Mark all messages as read",
          "GET /unread-count - Get unread message count",
          "GET /by-sender - Filter by sender type"
        ],
        "message_types": ["VICTIM", "RESCUE_TEAM", "DISPATCHER", "SYSTEM"]
      },
      {
        "name": "ChatController (WebSocket)",
        "type": "WebSocket",
        "endpoints": [
          "@MessageMapping /chat/send - Send real-time message",
          "@MessageMapping /chat/typing/{requestId} - Typing indicator",
